<Page
    x:Class="Canvas_Interface.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Canvas_Interface"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Canvas_Interface.View"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Border Background="#272537"
        CornerRadius="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:ConnectionId='2' x:Name="studentLogin"
                Content="Student Login"
                HorizontalAlignment="Center"
                Foreground="White"
                                       Height="60" Width="235"
        />
            <Button x:ConnectionId='3' x:Name="instructorLogin"
                Content="Instructor Login"
                Foreground="White"
                                          Height="60" Width="235"
        />
        </StackPanel>
    </Border>
</Page>

